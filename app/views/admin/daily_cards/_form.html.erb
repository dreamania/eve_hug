<%= form_for([:admin, @daily_card]) do |f| %>
  <%# if @daily_card.errors.any? %>
    <div id="error_explanation">
      <h2><%#= pluralize(@daily_card.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <%# @daily_card.errors.full_messages.each do |msg| %>
        <li><%#= msg %></li>
      <%# end %>
      </ul>
    </div>
  <%# end %>
<div class="row-fluid">
  <!-- block -->
  <div class="block">
      <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">사연 이미지 추가</div>
      </div>
      <div class="block-content collapse in">
          <div class="span12">
               <form class="form-horizontal">
                <fieldset>
                  
                  <div class="control-group">
                    <label class="control-label" for="focusedInput">게시예정일 (오늘 날짜: <%= Time.now.strftime('%Y-%m-%d') %>)</label>
                    <span></span>
                    <div class="controls">
                      <%= f.date_select :event_date %>
                      </div>
                    
                  </div>
                  <div class="control-group well">
                    <label class="control-label">PC 이미지</label>
                    <div>
                      <%= image_tag @daily_card.card_image_pc unless @daily_card.card_image_pc.nil? %>
                    </div>
                    <div class="controls">
                      <div class="uploader hover" id="uniform-fileInput">
                        <%= f.file_field :card_image_pc %>
                      </div>
                      <span class="help-inline">(386x210)메인페이지 표시.</span>
                    </div>
                  </div>
                  <div class="control-group well">
                    <label class="control-label">모바일 이미지</label>
                    <div>
                      <%= image_tag @daily_card.card_image_mobile unless @daily_card.card_image_mobile.nil? %>
                    </div>
                    <div class="controls">
                      <div class="uploader hover" id="uniform-fileInput">
                        <%= f.file_field :card_image_mobile %>
                      </div>
                      <span class="help-inline">(386x210)메인페이지 표시.</span>
                    </div>
                  </div>
                  <div class="control-group well">
                    <label class="control-label">메모</label>
                    <div class="controls">
                      <%= f.text_area :memo, id: "focusdInput", class: "input-xlarge focused", style: "width: 600px; height: 100px" %>
                      <span class="help-inline">HTML 사용 가능.</span>
                    </div>
                  </div>
                  <div class="form-actions">
                    <%= f.submit class: "btn btn-primary"  %>
                    <%= link_to "취소", admin_path, class: "btn"%>
                  </div>
                </fieldset>
              </form>

          </div>
      </div>
  </div>
  <!-- /block -->
</div>  
  
<% end %>
