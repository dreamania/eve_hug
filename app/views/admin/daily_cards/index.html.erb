<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">이벤트 참여 이미지 목록</div>
    </div>
    <div class="row-fluid block-content collapse in">
      <div class="span11">
        <%#= paginate @daily_cards %>
        <%= link_to "새로만들기", new_admin_daily_card_path %>
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th class="device">이벤트날짜</th>
              <th class="name">메모</th>
              <th>PC이미지</th>
              <th>모바일이미지</th>
              <th>생성일시</th>
              <th>관리</th>
            </tr>
          </thead>
          <tbody>
            <% @daily_cards.each do |daily_card| %>
              <tr class="">
                <td>
                  <%= daily_card.id %>
                </td>
                <td>
                  <%= daily_card.event_date.strftime('%Y-%m-%d') unless daily_card.event_date.nil? %>
                </td>
                <td>
                  <%= daily_card.memo %>
                </td>
                <td>
                  <%= image_tag daily_card.card_image_pc %>
                </td>
                <td>
                  <%= image_tag daily_card.card_image_mobile %>
                </td>
                <td class="created_at">
                  <p><%= daily_card.created_at.strftime("%m.%d %H:%M") %></p>
                </td>
                <td>
                  <p><%= link_to "수정", edit_admin_daily_card_path(daily_card) %></p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%#= paginate @daily_cards %>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
