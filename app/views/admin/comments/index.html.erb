<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">댓글 등록 현황</div>
    </div>
    <div class="row-fluid block-content collapse in">
      <div class="span11">
        <%#= paginate @users %>
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>참여자</th>
              <th>댓글</th>
              <th>상태</th>
              <th>참여일시</th>
              <th>삭제</th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |comment| %>
              <tr class="">
                <td>
                  <%= comment.id %>
                </td>
                <td>
                  <%= comment.user.name %>
                </td>
                <td>
                  <%= comment.message %>
                </td>
                <td>
                  <%= comment.status %>
                </td>
                <td class="created_at">
                  <p><%= comment.created_at.strftime("%m.%d %H:%M") %></p>
                </td>
                <td>
                  <p><%= link_to "삭제", admin_comment_path(comment), method: :delete, confirm: "삭제하시겠습니까?" %></p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%#= paginate @users %>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
