<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">댓글 등록 현황</div>
    </div>
    <div class="row-fluid span8">
			<div class="span6">
				<%= render "comments_counts" %>
			</div>
			<div class="span6">
				<%= render "users_counts"%>
			</div>
    </div>
		<%= paginate @comments %>
    <div class="row-fluid block-content collapse in">
      <div class="span11">
        <%= paginate @comments %>
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <colgroup>
	          <col width="5%">
						<col width="10%">
						<col width="60%">
						<col width="5%">
						<col width="10%">
						<col width="10%">
          </colgroup>
          <thead>
            <tr>
              <th class="comment_id">ID</th>
              <th class="comment_user">참여자</th>
              <th class="comment_message">댓글</th>
              <th class="comment_status">상태</th>
              <th class="comment_created_at">참여일시</th>
              <th class="comment_action">삭제</th>
            </tr>
          </thead>
          <tbody>
          <% @comments.each do |comment| %>
           	<%if comment.status=="deleted" %>
              <tr class="deleted" user_id="<%=comment.user.id%>" comment_id="<%=comment.id%>">
            <%else%>
              <tr class="" user_id="<%=comment.user.id%>" comment_id="<%=comment.id%>">
						<%end%>
                <td>
                  <%= comment.id %>
                </td>
                <td class="user">
                <%if comment.user.status=="cherry_picker"%>
                  <div class="cherry_picker">
                  <%else%>                  
                  <div>
                  <%end%>
									<p><%= image_tag comment.user.profile_picture %></p>
                  <p>
										<%= link_to comment.user.name, 
											comment.user.facebook_url, target:"_blank" %>
									</p>
									<p><%= comment.user.comments_count %>회 참여</p>
                </div>
                </td>
                <td><div style="width:400px; line-height:24px;"><p>
                  <%= comment.message %>
                </pagex></div></td>
                <td class="status">
                  <%= comment.status %>
                </td>
                <td class="created_at">
                  <p><%= comment.created_at.strftime("%m.%d %H:%M") %></p>
                </td>
                <td class="command">
                  <%if comment.status=="deleted"%>
                    <p><%= link_to "복구", "#", class: "delete_comment", comment_id: comment.id%></p>
                  <%else%>
                    <p><%= link_to "삭제", "#", class: "delete_comment", comment_id: comment.id%></p>
                  <%end%>
                  <%if comment.user.status=="cherry_picker"%>
                  <p><%= link_to "체리피커해제", "#", class: "set_cherry_picker",cherry_picker_yn: "n", comment_id: comment.id%>
                  </p>
                  <%else%>
                  <p><%= link_to "체리피커", "#",class: "set_cherry_picker",cherry_picker_yn: "y", comment_id: comment.id %>
                  </p>
                  <%end%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @comments %>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
