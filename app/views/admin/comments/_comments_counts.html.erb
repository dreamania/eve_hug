<p class="total_user_header"><접속 경로별 댓글 합계></p>
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>날짜</th>
			<th>PC</th>
			<th>모바일</th>
			<th>합계</th>
		</tr>
	</thead>
	<tbody>
		<% @comments_counts_daily.each do |v| %>
		<tr>
			<td>
				<span><%=v.created_date%></span>  
			</td> 
			<td>
				<span><%=v.pc_count%></span>  
			</td>
			<td>
				<span><%=v.mobile_count%></span>  
			</td>
			<td>
				<span><%=v.total_count%></span>  
			</td>
		</tr>
		<% end %>
		<% @comments_counts_sum.each do |v| %>
		<tr>
			<td>
				<span>총합계</span>  
			</td>
			<td>
				<span><%=v.pc_count%></span>  
			</td>
			<td>
				<span><%=v.mobile_count%></span>  
			</td>
			<td>
				<span><%=v.total_count%></span>  
			</td>
		</tr>  
		<% end %>
	</tbody>
</table>