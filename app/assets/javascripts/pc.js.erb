$(document).ready(function(){
  $("#message_button").click(function(event) {
    event.preventDefault();
    $("#popup_input").bPopup({
      follow: [false, false], //x, y
      positionStyle: 'fixed',
      closeClass: 'close',
      modalColor: 'black'
    });
  });
  $('#data_submit').click(function(e) {
    e.preventDefault();
    $("#popup_finish").bPopup({
      follow: [false, false], //x, y
      positionStyle: 'fixed',
      closeClass: 'close',
      modalColor: 'black'
    });
    $('#close_finish').click(function(e){
      e.preventDefault();
      $("#popup_finish").bPopup().close();
      $("#popup_input").bPopup().close();
    });
  });
});
