$(document).ready(function(){
  $("#message_button").click(function(event) {
    event.preventDefault();
    $("#popup_input").bPopup({
      follow: [false, false], //x, y
      positionStyle: 'fixed',
      closeClass: 'close',
      modalColor: 'black'
    });
  });
  $("#data_submit").click(function(event){
    event.preventDefault();
    $("#popup_finish").bPopup({
      follow: [false, false], //x, y
      positionStyle: 'fixed',
      closeClass: 'close',
      modalColor: 'black'
    });
  });
  $(".finish_button, #close_button").click(function(event) {
    event.preventDefault();
    $("#popup_finish").bPopup().close();
    $("#popup_input").bPopup().close();
  });
  $("#show_present_button").click(function(event) {
    event.preventDefault();
    $("#show_present").bPopup({
      follow: [false, false], //x, y
      positionStyle: 'fixed',
      closeClass: 'close',
      modalColor: 'black'
    });
  });
  $("#button_personal_policy").click(function(event) {
    event.preventDefault();
    $("#personal_policy").bPopup({
      follow: [false, false], //x, y
      positionStyle: 'fixed',
      closeClass: 'close',
      modalColor: 'black'
    });
  });
});
